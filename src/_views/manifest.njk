---
permalink: '/manifest.webmanifest'
eleventyExcludeFromCollections: true
---
{
  "name": "{{ site.name }}",
  "short_name": "{{ site.shortName }}",
  "icons": [
    {
      "src": "/_assets/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/_assets/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/_assets/icons/safari-pinned-tab.svg",
      "sizes": "196x196",
      "type": "image/svg",
      "purpose": "any maskable"
    }
  ],
  "theme_color": "{{ tokens.colors.themeColors.primary }}",
  "background_color": "{{ tokens.colors.bodyColors.bodyBg }}",
  "display": "standalone",
  "start_url": "/"
}
