{% set carouselIndex = loop.index %}

<section class="section section-carousel">
  <div class="{{ item.container }}">
    <div id="carousel{{ carouselIndex }}" class="carousel slide" data-ride="carousel">
      {% if item.showIndicators %}
      <ol class="carousel-indicators">
        {% for image in item.images %}
          <li data-target="#carousel{{ carouselIndex }}" data-slide-to="{{ loop.index0 }}" class="{% if loop.first == true %} active {% endif %}"></li>
        {% endfor %}
      </ol>
      {% endif %}
      <div class="carousel-inner">
        {% for image in item.images %}
        <div class="carousel-item {% if loop.first == true %} active {% endif %}">
          <img src="{{ image.image }}" class="d-block w-100" alt="{{ image.alt }}">
        </div>
        {% endfor %}
      </div>
      {% if item.showNavigation %}
      <a class="carousel-control-prev" href="#carousel{{ carouselIndex }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel{{ carouselIndex }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      {% endif %}
    </div>
  </div>
</section>
