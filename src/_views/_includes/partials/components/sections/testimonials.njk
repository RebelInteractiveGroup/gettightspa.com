<section class="section section-testimonials text-{{ item.textColor }} bg-{{ item.backgroundColor }}">
  <div class="{{ item.container }}">
    <header class="section-testimonials-header">
      <h{{ item.headingLevel }}>
        {{ item.title }}
      </h{{ item.headingLevel }}>
    </header>
    {% set carouselIndex = loop.index %}
    <div id="carousel{{ carouselIndex }}" class="carousel slide" data-ride="carousel">
      {% if item.showIndicators %}
      <ol class="carousel-indicators">
        {% for quote in item.quotes %}
          <li data-target="#carousel{{ carouselIndex }}" data-slide-to="{{ loop.index0 }}" class="{% if loop.first == true %} active {% endif %}"></li>
        {% endfor %}
      </ol>
      {% endif %}
      <div class="carousel-inner">
        {% for quote in item.quotes %}
        <div class="carousel-item {% if loop.first == true %} active {% endif %}">
          <blockquote class="blockquote">
            {{ quote.quotation | markdownFilter | safe }}
            <footer class="blockquote-footer"><cite title="{{ quote.citation }}">{{ quote.citation }}</cite></footer>
          </blockquote>
        </div>
        {% endfor %}
      </div>
      {% if item.showNavigation %}
      <a class="carousel-control-prev" href="#carousel{{ carouselIndex }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel{{ carouselIndex }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      {% endif %}
    </div>
  </div>
</section>
