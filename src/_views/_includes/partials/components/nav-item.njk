<li class="nav-item {{ dropdown }}">
  <a class="nav-link {{ active }} {{ dropdownToggle }}" href="{{ itemUrl }}"{{ relAttribute | safe }}{{ currentAttribute | safe }} {{ target }} {{ dropdownAttributes | safe }}>
    {%if item.icon %}
    <img class="socialmedia-icon" src="{{ item.icon }}" alt="{{ item.text }}">
    {% endif %}
    <span class="item-wrap">{{ item.text }}</span>
    {%if item.supportingText %}
    <span class="item-wrap">{{ item.supportingText }}</span>
    {% endif %}
  </a>
  {% if hasSubmenu %}
    <div class="dropdown-menu">
      {% for subitem in item.submenuitems %}
        <a class="dropdown-item{% if subitem.url | lower == page.url | lower %} active{% endif %}" href="{{ subitem.url }}">{{ subitem.text | safe }}</a>
      {% endfor %}
    </div>
  {% endif %}
</li>
